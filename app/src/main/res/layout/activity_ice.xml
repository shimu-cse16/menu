<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ice">

    <LinearLayout
        android:id="@+id/main1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear1"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/i1" />
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MURPHYS ICE"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="130Tk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"/>

                <Button
                    android:id="@+id/b1"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/white"
                    android:text="Add"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_marginLeft="13dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/i2"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREAMY CARAMEL"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="150Tk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"/>

                <Button
                    android:id="@+id/b2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="Add"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_marginLeft="13dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/i3"/>
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUTTER SCOTCH"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/v3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="190Tk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"/>

                <Button
                    android:id="@+id/b3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="Add"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/main2"
        android:layout_below="@id/main1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear7"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image7"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/i4" />

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARAMEL APPLE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v7"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80Tk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"/>

                <Button
                    android:id="@+id/b7"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Add"
                    android:textSize="10sp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear8"
            android:layout_marginLeft="13dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image8"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/i5"/>
            <TextView
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOUGHNUT ICE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/v8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="140Tk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"/>

                <Button
                    android:id="@+id/b8"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="Add"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear9"
            android:layout_marginLeft="13dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image9"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/i6"/>
            <TextView
                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MUPPET MINT"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/v9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="160Tk"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"/>

                <Button
                    android:id="@+id/b9"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="Add"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>





</RelativeLayout>